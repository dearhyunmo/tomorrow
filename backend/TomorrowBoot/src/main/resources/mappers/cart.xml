<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cart">
    <insert id="insert" parameterType="cart">
		INSERT INTO cart (id,menu_id,name,amount,price) VALUES (#{id},#{menu_id},#{name},#{amount},#{price})
	</insert>
	<delete id="delete" parameterType="cart">
		DELETE FROM cart WHERE member_id = #{memberId}
	</delete>
	<select id="getlist" parameterType="String" resultType="cart">
		SELECT * FROM cart WHERE member_id = #{memberId}
	</select>
</mapper>