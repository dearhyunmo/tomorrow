<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shipping">
	<insert id="insert" parameterType="map">
		INSERT INTO shipping (order_id,member_id,mobile,addr,etc,name,status,menu_id, seller_id) VALUES (#{order_id},#{id},#{mobile},#{addr},#{etc},#{name},#{status},#{menu_id},#{seller_id})
	</insert>
	<update id="updateStatus" parameterType="int">
		update shipping
		set status = #{status}
		where id = #{id}
	</update>
	<select id="getShippingDto" parameterType="String" resultType="shipping">
		select s.*
		from shipping as s
	 	left join menu as m
	  	on s.menu_id = m.id
		where m.seller_id = #{seller_id};
	</select>
</mapper>